  <% content_for :title, "Editer l'article | Raidators" %>

<div class="container-fluid mt-3 mb-5 dark-background-raidators">
  <section>
    <div class="col-lg-6 col-md-4 form-background-raidators">
      <div class="container py-5 my-5">
        <h3 class="text-center pb-2">Modifier l'article</h3>
        <!--Grid row-->
        <div class="row d-flex align-items-center justify-content-center form-background-raidators">
          <!--Grid column-->
          <div class="col-md-6 col-xl-8">
            <!--Form-->
            <div class="card">
              <div class="card-body px-4">
                <%= form_for @post do |editpost| %>
                  <div class="form-group">
                    <%= editpost.text_field :title, class:"form-control" %>
                  </div>
                  <div class="form_group">
                    <%= editpost.text_field :content, class: 'form-control' %>
                  </div>
                  <div class="actions text-center my-3">
                    <%= editpost.submit "Modifier l'article", class:"btn btn-success btn-raidators" %>
                  </div> 
                <%end%>
                </div>
                </div>
                <!--/.Form-->
              </div>
              <!--Grid column-->
            </div>
            <!--Grid row-->
          </div>
          <!-- Content -->
        </div>
        <!--div background-->
      </section>
      <!-- Full Page Intro -->
    </div>
  </section>
</div>