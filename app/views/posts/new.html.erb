<html>
<body>

<h1>Nouveaux posts</h1>

  <%= form_for @post do |editpost| %>

    <div class="form-group">
      <%= editpost.text_field :title, placeholder: 'Titre', class:"form-control" %>
    </div>

    <div class="form_group">
      <%= editpost.text_area :content, placeholder: "Contenu de l'article",  class:"form-control" %>
    </div>

    <div class="form-group">
      <%= editpost.text_field :image_url, placeholder: 'Image', class:"form-control" %>
    </div>

    <div class="form-group">
      <button class="btn-primary" type="submit"> Publier</button>
    </div>

  <%end%>
  

</body>
</html>