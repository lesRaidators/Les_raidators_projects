<h1>Addresses#new</h1>
<p>Find me in app/views/addresses/new.html.erb</p>


<%= form_for Adress.create do |f| %>

  <div class="form-group">
  <%= f.text_field :first_name, placeholder: 'Prénom', class:"form-control" %>
  </div>

  <div class="form_group">
  <%= f.text_field :last_name, placeholder: 'Nom',  class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.text_area :street_number, placeholder: 'Numéro de rue', class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.text_area :street, placeholder: 'Rue', class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.text_area :zip_code , placeholder: 'Code Postal', class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.text_area :city, placeholder: 'Ville', class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.text_area :country , placeholder: 'Pays', class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.text_area :phone_number, placeholder: 'Téléphone', class: 'form-control' %>
  </div>


  <div class="form-group">
  <%= f.text_area :company_name, placeholder: 'Nom de lentreprise', class: 'form-control' %>
  </div>

  <div class="form-group">
  <button class="btn-primary" type="submit"> Ajouter une adresses</button>
  </div>

  <%end%>