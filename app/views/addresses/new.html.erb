
<%= form_for Address.create do |f| %>

  <div class="form-group">
  <%= f.text_field :first_name, placeholder: 'Prénom', class:"form-control" %>
  </div>

  <div class="form_group">
  <%= f.text_field :last_name, placeholder: 'Nom',  class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.text_field :street_number, placeholder: 'Numéro de rue', class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.text_field :street, placeholder: 'Rue', class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.text_field :zip_code , placeholder: 'Code Postal', class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.text_field :city, placeholder: 'Ville', class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.text_field :country , placeholder: 'Pays', class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.text_field :phone_number, placeholder: 'Téléphone', class: 'form-control' %>
  </div>


  <div class="form-group">
  <%= f.text_field :company_name, placeholder: 'Nom de lentreprise', class: 'form-control' %>
  </div>

  <div class="form-group">
  <button class="btn-primary" type="submit"> Ajouter une adresses</button>
  </div>

  <%end%>