<% content_for :title, "Mon adresse | Raidators" %>
<!-- Main navigation -->
<div class="container-fluid mt-3 mb-5 brown-background-raidators">
  <!-- Full Page Intro -->
  <section class:"image-edit-registration">
    <!-- background -->
    <div class="col-lg-6 col-md-4 form-background-raidators">
      <!-- Content -->
      <div class="container my-5">     
        <h3 class="text-center pb-2">Mon adresse</h3>
        <!--Grid row-->
        <div class="row d-flex align-items-center justify-content-center form-background-raidators">
          <!--Grid column-->
          <div class="col-md-6 col-xl-8">
            <!--Form-->
            <div class="card">
              <div class="card-body px-4">
                <h1> Modifier l'adresse </h1>
                <%= form_for [@user, @address] do |f| %>
                  <div class="form-group">
                  <%= f.text_field :first_name, class:"form-control form-control-raidators" %>
                  </div>
                  <div class="form_group">
                  <%= f.text_field :last_name, class: 'form-control form-control-raidators' %>
                  </div>
                  <div class="form-group">
                  <%= f.text_area :street_number, class: 'form-control form-control-raidators mt-2' %>
                  </div>
                  <div class="form-group">
                  <%= f.text_area :street, class: 'form-control form-control-raidators' %>
                  </div>
                  <div class="form-group">
                  <%= f.text_area :zip_code, class: 'form-control form-control-raidators' %>
                  </div>
                  <div class="form-group">
                  <%= f.text_area :city, class: 'form-control form-control-raidators' %>
                  </div>
                  <div class="form-group">
                  <%= f.text_area :country, class: 'form-control form-control-raidators' %>
                  </div>
                  <div class="form-group">
                  <%= f.text_area :phone_number, class: 'form-control form-control-raidators' %>
                  </div>
                  <div class="form-group">
                  <%= f.text_area :company_name, class: 'form-control form-control-raidators' %>
                  </div>
                  <div class="form-group">
                  <button class="btn-primary btn-raidators text-white" type="submit"> Modifier l'adresse </button>
                  </div>
                  <%end%>
                </div>
              </div>
            </div>
            <!--/.Form-->
          </div>
          <!--Grid column-->
        </div>
        <!--Grid row-->
      </div>
      <!-- Content -->
    </div>
    <!--Fin background-->
  </section>
  <!-- Full Page Intro -->
</div>