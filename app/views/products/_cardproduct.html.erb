<% content_for :title, "Dons | Raidators" %>

<%= render :partial => "shared/banner" %>

<div class="container mt-5">
  <!--Section: Content-->
  <section class="">
    <!-- Section heading -->
    <h2 class="text-left mb-5 text-center">Un achat solidaire</h2>
    <p class="text-left mb-5 text-center">Tout achat de produit nous rapproche de l’objectif : permettre à l’équipe Raidators de participer à Europ.Raid pour acheminer 70Kg de matériels vers des écoles défavorisées. </p>
  </section>
  <!--Section: Content-->
</div>
<br>
<hr>




    <div class="container mt-5">


      <!--Section: Content-->
      <section class="dark-grey-text">

