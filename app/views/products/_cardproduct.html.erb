          <div class="card-body">

            <!--Grid row-->
            <div class="row">

              <!--Grid column-->
              <div class="col-lg-8">

                <!-- Pills navs -->
                <ul class="nav md-pills flex-center flex-wrap mx-0" role="tablist">
                  <li class="nav-item">
                    <a class="nav-link font-weight-bold text-uppercase" data-toggle="tab" href="#panel31" role="tab">2. Don avec contrepartie</a>
