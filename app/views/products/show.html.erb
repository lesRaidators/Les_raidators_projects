<div class="container-fluid mt-3 mb-5 light-background-raidators">
  <div class="container mt-5">
    <div class="card card-list content-full-size-div-raidator card-rounded-raidators">
      <div class="card-header card-header d-flex justify-content-between align-items-center dark-background-raidators text-white top-corner-radius-card-image-raidators">
        <h3 class="mb-0 text-white">Description Produit </h3>
      </div>
      <div class="card-body">
        <!--Grid row-->
        <div class="row">
          <!--Grid column-->
          <div class="col-lg-12">
            <!-- Pills panels -->
            <div class="tab-content pt-4">
              <!--Panel 2-->
              <div>
                <!--Grid row-->
                  <div class="row">
                    <!--Grid column-->
                    <div class="col-md-5 mb-4">
                      <hr class="mb-5">  
                      <%= image_tag @product.image_url, width: "70%", class:"card-img-top card-rounded-raidators"  %> 
                    </div>
                    <!--Grid column-->
                    <div class="col-md-7 mb-4">
                      <hr class="mb-5">
                      <h3 class="mb-3"> <%= @product.title %></h3>
                      <p>Description: <%= @product.description %></p>
                      <p> Prix: <%= @product.price %>€</p>
                      <% if user_signed_in? %>
                        <%= link_to "Ajouter à mon panier", selected_products_path(product_id: @product.id), method: 'POST', class:"btn btn-success btn-raidators btn-md  mx-0" %>
                      <% else %>
                        <%= link_to "Ajouter à mon panier", new_user_session_path, class:"btn btn-success btn-raidators btn-md  mx-0" %>
                      <% end %>
                    </div>
                    <!--Grid column-->
                  </div>
                  <!--Grid row-->
                <hr class="mb-5">
              </div>
              <!--/.Panel 2-->
            </div>
            <!-- Pills panels -->
          </div>
          <!--Grid column-->
        </div>
      </div>
    </div>
  </div>
</div>