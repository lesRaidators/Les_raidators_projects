<% content_for :title, " Nouveau produit | Raidators" %>
<!-- Main navigation -->
<div class="container-fluid mt-3 mb-5 dark-background-raidators">
  <!-- background -->
  <div class="col-lg-6 col-md-4  mt-5 mb-5 form-background-raidators">
    <!-- Content -->
    <div class="container my-5">     
      <h3 class="text-center pb-2">Cr√©er un produit</h3>
      <!--Grid row-->
      <div class="row d-flex align-items-center justify-content-center form-background-raidators">
        <!--Grid column-->
        <div class="col-md-6 col-xl-8">
          <!--Form-->
          <div class="card">
            <div class="card-body px-4">
              <div class="container text-center my-5">
                <%= form_for @product do |f| %>
                  <div class="form-group">
                  <%= f.text_field :title, placeholder: 'Titre', class:"form-control form-control-raidators" %>
                  </div>
                  <div class="form_group">
                  <%= f.text_field :price, placeholder: 'Prix',  class: 'form-control form-control-raidators' %>
                  </div>
                  <div class="form-group">
                  <%= f.text_area :description, placeholder: 'Description', class: 'mt-3 form-control form-control-raidators' %>
                  </div>
                  <div class="form-group">
                  <%= f.select :category,['Don', 'Produit'], {}, class: 'form-control form-control-raidators' %>
                  </div>  
                  <div>
                    <h3>Ajouter une photo</h3>
                    <%= f.label :avatar %>
                    <%= f.file_field :avatar, class: 'form-control form-control-raidators', accept: "image/png, image/gif, image/jpeg" %>
                  </div>       
                  <div class="actions text-center my-3">
                    <%= f.submit "Valider le don/produit", class:"btn btn-primary btn-dark-raidators" %>
                  </div>
                <%end%>               
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>