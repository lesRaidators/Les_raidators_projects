<!-- Main navigation -->
<div class="container-fluid mt-3 mb-5 light-background-raidators ">
  
  <!-- Full Page Intro -->
  <section class:"image-signup ">
    <!-- form block -->
    <div class="col-lg-6 col-md-4 form-background-raidators">
      <!-- Content -->
      <div class="container py-5 my-5  ">
        
        <h3 class="text-center pb-2">Prêt à nous rejoindre ?</h3>
        <p class="lead text-center pt-2 mb-5">La solidarité n’a pas de frontière.</p>
        
        <!--Grid row-->
        <div class="row d-flex align-items-center justify-content-center form-background-raidators">
          <!--Grid column-->
          <div class="col-md-6 col-xl-5">
            <!--Form-->
            <div class="card">
              <div class="card-body px-4  ">

                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>

                    <div class="field md-form mt-3">
                      <%= f.label :email %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"form3", class:"form-control form-control-raidators" %>
                    </div>

                    <div class="field md-form mt-3">
                      <%= f.label :password %>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "new-password", id:"form4", class:"form-control form-control-raidators" %>
                    </div>

                    <div class="field md-form mt-3">
                      <%= f.label :password_confirmation %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", id:"form4", class:"form-control form-control-raidators" %>
                    </div>

                    <div class="actions text-center my-3">
                      <%= f.submit "Sign up", class:"btn btn-primary btn-dark-raidators" %>
                    </div>
                 <% end %>

              <%= render "devise/shared/links" %>
              </div>
            </div>
            <!--/.Form-->
          </div>
          <!--Grid column-->
        </div>
        <!--Grid row-->
      </div>
      <!-- Content -->
    </div>
    <!-- Mask & flexbox options-->
  </section>
  <!-- Full Page Intro -->
</div>
