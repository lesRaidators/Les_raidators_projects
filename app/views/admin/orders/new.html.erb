
<div class="col-lg-6 col-md-4  mt-5 mb-5 form-background-raidators">
  <!-- Content -->
  <div class="container my-5">
    <h3 class="text-center pb-2">Créer une commande</h3>
    <!--Grid row-->
    <div class="row d-flex align-items-center justify-content-center form-background-raidators">
      <!--Grid column-->
      <div class="col-md-6 col-xl-8">
        <!--Form-->
        <div class="card">
          <div class="card-body px-4">
            <div class="container text-center my-5">
              <%= form_with model: [:admin, @order], local: true do |f| %>
                <div class="form-group">
                  <%= f.select :user_email, options_for_select(User.all.map { |user| [user.email] }, @admin.id ), class: 'form-control form-control-raidators', required: true %>
                </div>

                <div class="form-group">
                  <% Product.all.each do |product| %>
                    <div class="row">
                      <%= f.check_box :products_ids, {:multiple => true, checked: false}, product.id, nil%>
                      <%= f.label "addproduct", "#{product.title}, prix: #{product.price / 100}€", class: "ml-2"  %>
                    </div>
                  <%end%>
                </div>



                <div class="actions text-center my-3">
                  <%= f.submit "Valider l'ajout", class:"btn btn-primary btn-dark-raidators" %>
                </div>
              <%end%>
            </div>
          </div>
        </div>
        <%= link_to "Annuler", admin_products_path, class: "btn btn-warning mb-3" %>
      </div>
    </div>
  </div>
</div>
