<div class="container-fluid mt-3 mb-5 light-background-raidators">
  <div class="container mt-5">
    <div class="card card-list content-full-size-div-raidator card-rounded-raidators">

      <div class="card-header card-header d-flex justify-content-between align-items-center dark-background-raidators ">
        <h3 class="mb-0">Commande n° <%= @order.id %> </h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-12 mb-4">
            <p class="mb-3"> Montant : <%= @order.products.sum(&:price) / 100%> €</p>
            <p>Créee le <%= @order.created_at.strftime("%d/%m/%Y") %></p>
            <p><%= link_to "Utilisateur : #{@order.user.email}", admin_user_path(@order.user) %></p>
          </div>
        </div>
      </div>

      <div class="card-header card-header d-flex justify-content-between align-items-center dark-background-raidators ">
        <h3 class="mb-0">Produits de la commande </h3>
      </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Title</th>
                  <th>Prix Unitaire</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @order.products.each do |product| %>
                  <tr>
                    <td><%= product.id %></td>
                    <td><%= product.title %></td>
                    <td><%= product.price / 100 %>€</td>
                    <td>
                      <%= link_to admin_product_path(product) do %>
                        <i class="fas fa-eye mr-2 fa-lg"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
            <%= link_to "Supprimer la commande", admin_order_path(@order), method: 'DELETE', class:"btn btn-danger", :data => {:confirm => 'Attetion cette action est définitive'} %>
            <%= link_to "Retour à la liste des commandes", admin_orders_path, class:"btn btn-info"%>
        </div>
    </div>
  </div>
</div>
