<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">GESTION DES PRODUITS</h1>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">PRODUITS</h6>
  </div>
  <div class="card-body">
    <%= link_to "Créer un nouveau produit", new_admin_product_path, class: "btn btn-info mb-3" %>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Prix</th>
            <th>Categorie</th>
            <th>% donation</th>
            <th>Status</th>
            <th></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Prix</th>
            <th>Categorie</th>
            <th>% donation</th>
            <th>Status</th>
            <th></th>
          </tr>
        </tfoot>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td><%= product.title %></td>
              <td><%= product.price / 100 %>€</td>
              <td><%= product.category %></td>
              <td><%= product.donation_part %>% du prix</td>
              <td>status</td>
              <td>
                <%= link_to admin_product_path(product) do %>
                  <i class="fas fa-eye mr-2 fa-lg"></i>
                <%end%>
                <%= link_to edit_admin_product_path(product) do %>
                  <i class="far fa-edit ml-2 fa-lg"></i>
                <%end%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
