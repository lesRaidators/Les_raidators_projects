
<div class="col-lg-6 col-md-4  mt-5 mb-5 form-background-raidators">
  <!-- Content -->
  <div class="container my-5">
    <h3 class="text-center pb-2">Modifier le produit</h3>
    <!--Grid row-->
    <div class="row d-flex align-items-center justify-content-center form-background-raidators">
      <!--Grid column-->
      <div class="col-md-6 col-xl-8">
        <!--Form-->
        <div class="card">
          <div class="card-body px-4">
            <div class="container text-center my-5">
              <%= form_with model: [:admin, @product], local: true do |f| %>
              <div class="form-group">
                <%= f.text_field :title, placeholder: @product.title, class:"form-control form-control-raidators", required: true %>
              </div>
              <div class="form_group">
                <%= f.text_field :price, placeholder: @product.price,  class: 'form-control form-control-raidators', required: true %>
              </div>
              <div class="form-group">
                <%= f.text_area :description, placeholder: @product.description, class: 'mt-3 form-control form-control-raidators', required: true %>
              </div>
              <div class="form-group">
                <%= f.select :category, options_for_select(Product.categories.keys, @product.category), {}, class: 'form-control form-control-raidators' %>
              </div>
                <div class="form_group mt-3">
                  Part de donation en % (si 10%, mettre 10) :
                  <%= f.text_field :donation_part, placeholder: "#{@product.donation_part}%",  class: 'form-control form-control-raidators', required: true %>
                </div>
              <div>
                <h4>Photo actuelle :</h4>
                <% if @product.avatar.attached? %>
                  <%= image_tag @product.avatar, width: "70%", class:"card-img-top card-rounded-raidators"  %>
                <% end %>
                <h3>Changer de photo</h3>
                <%= f.label :avatar %>
                <%= f.file_field :avatar, class: 'form-control form-control-raidators', accept: "image/png, image/gif, image/jpeg" %>
              </div>
              <div class="actions text-center my-3">
                <%= f.submit "Valider la modification", class:"btn btn-primary btn-dark-raidators" %>
              </div>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
