
<div class="col-lg-6 col-md-4  mt-5 mb-5 form-background-raidators">
  <!-- Content -->
  <div class="container my-5">
    <h3 class="text-center pb-2">Cr√©er un produit</h3>
    <!--Grid row-->
    <div class="row d-flex align-items-center justify-content-center form-background-raidators">
      <!--Grid column-->
      <div class="col-md-6 col-xl-8">
        <!--Form-->
        <div class="card">
          <div class="card-body px-4">
            <div class="container text-center my-5">
              <%= form_with model: [:admin, @product], local: true do |f| %>
                <div class="form-group">
                  <%= f.text_field :title, placeholder: 'Titre', class: 'form-control form-control-raidators', required: true %>
                </div>
                <div class="form_group">
                  <%= f.text_field :price, placeholder: 'Prix',  class: 'form-control form-control-raidators', required: true %>
                </div>
                <div class="form-group">
                  <%= f.text_area :description, placeholder: 'Description', class: 'mt-3 form-control form-control-raidators', required: true %>
                </div>
                <div class="form-group">
                  <%= f.select :category, options_for_select(Product.categories.keys), {}, class: 'form-control form-control-raidators' %>
                </div>
                <div class="form_group mt-3">
                  Part de donation en % (si 10%, mettre 10) :
                  <%= f.text_field :donation_part, placeholder: 'Part de donation en pourcent',  class: 'form-control form-control-raidators', required: true %>
                </div>
                <div class="mt-3">
                  <h3>Ajouter une photo</h3>
                  <%= f.label :avatar %>
                  <%= f.file_field :avatar, class: 'form-control form-control-raidators', accept: "image/png, image/gif, image/jpeg" %>
                </div>
                <div class="actions text-center my-3">
                  <%= f.submit "Valider l'ajout", class:"btn btn-primary btn-dark-raidators" %>
                </div>
              <%end%>
            </div>
          </div>
        </div>
        <%= link_to "Annuler", admin_products_path, class: "btn btn-warning mb-3" %>
      </div>
    </div>
  </div>
</div>
