<div class="container-fluid mt-3 mb-5 light-background-raidators">
  <div class="container mt-5">
    <div class="card card-list content-full-size-div-raidator card-rounded-raidators">

      <div class="card-header card-header d-flex justify-content-between align-items-center dark-background-raidators ">
        <h3 class="mb-0">Utilisateur : <%= @user.email %> </h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-12 mb-4">
            <p class="mb-3"> <%= @user.first_name %> <%= @user.last_name%></p>
            <p>Entreprise: <%= @user.company_name %></p>
            <p>Inscrit depuis le <%= @user.created_at.strftime("%d/%m/%Y") %></p>
            <%= link_to "Supprimer", admin_user_path(@user), method: 'DELETE', class:"btn btn-danger", :data => {:confirm => 'Attetion cette action est définitive'} %>
            <%= link_to "Retour à la liste des utilisateurs", admin_users_path, class:"btn btn-info"%>
          </div>
        </div>
      </div>

      <div class="card-header card-header d-flex justify-content-between align-items-center dark-background-raidators ">
        <% if @user.orders.empty? %>
            <h3 class="mb-0">Cet utilisateur n'a pas de commandes </h3>
          </div>
        <% else %>
          <h3 class="mb-0">Ses commandes : </h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>Crée le</th>
                    <th>Montant</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% @user.orders.each do |order| %>
                    <tr>
                      <td><%= order.id %></td>
                      <td><%= order.created_at.strftime("%d/%m/%Y") %></td>
                      <td><%= order.total_price / 100 %>€</td>
                      <td>
                        <%= link_to admin_user_path(@user) do %>
                          <i class="fas fa-eye mr-2 fa-lg"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
        </div>
      <%end%>

    </div>
  </div>
</div>
