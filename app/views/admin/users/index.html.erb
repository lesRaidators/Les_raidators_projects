<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">GESTION DES USERS</h1>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">USERS</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Entreprise</th>
            <th>Nb de commandes</th>
            <th></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Prix</th>
            <th>Categorie</th>us
            <th>% donation</th>
            <th>Status</th>
            <th></th>
          </tr>
        </tfoot>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.first_name %> <%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.company_name %></td>
              <td><%= user.orders.size %></td>
              <td>
                <%= link_to admin_user_path(user) do %>
                  <i class="fas fa-eye mr-2 fa-lg"></i>
                <%end%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
