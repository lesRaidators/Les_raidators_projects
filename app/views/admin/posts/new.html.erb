
<div class="col-lg-6 col-md-4  mt-5 mb-5 form-background-raidators">
  <!-- Content -->
  <div class="container my-5">
    <h3 class="text-center pb-2">Cr√©er un article</h3>
    <!--Grid row-->
    <div class="row d-flex align-items-center justify-content-center form-background-raidators">
      <!--Grid column-->
      <div class="col-md-12 col-xl-12">
        <!--Form-->
        <div class="card">
          <div class="card-body px-4">
            <div class="container text-center my-5">
              <%= form_with model: [:admin, @post], local: true do |f| %>
                <div class="form-group">
                  <%= f.text_field :title, placeholder: 'Titre', class: 'form-control form-control-raidators', required: true %>
                </div>
                <div class="form_group">
                  <%= f.text_area :content, placeholder: 'Contenu',  class: 'form-control form-control-raidators', rows: 15, required: true %>
                </div>
                <div class="form-group">
                  <%= f.select :user_id, options_for_select(User.where(admin: true).map { |user| [user.email, user.id] }), {}, class: 'form-control form-control-raidators' %>
                </div>
                <div class="form-group">
                  <%= f.select :status, options_for_select(Post.statuses.keys), {}, class: 'form-control form-control-raidators' %>
                </div>
                <div class="mt-3">
                  <h3>Ajouter une photo</h3>
                  <%= f.label :avatar %>
                  <%= f.file_field :avatar, class: 'form-control form-control-raidators', accept: "image/png, image/gif, image/jpeg" %>
                </div>
                <div class="actions text-center my-3">
                  <%= f.submit "Valider l'article", class:"btn btn-primary btn-dark-raidators" %>
                </div>
              <%end%>
            </div>
          </div>
        </div>
        <%= link_to "Annuler", admin_posts_path, class: "btn btn-warning mb-3" %>
      </div>
    </div>
  </div>
</div>
