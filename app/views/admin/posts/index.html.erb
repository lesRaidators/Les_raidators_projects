<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">GESTION DES ARTICLES</h1>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">ARTICLES</h6>
  </div>
  <div class="card-body">
    <%= link_to "CrÃ©er un nouveau produit", new_admin_post_path, class: "btn btn-info mb-3" %>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Statut</th>
            <th>Auteur</th>
            <th></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Statut</th>
            <th>Auteur</th>
            <th></th>
          </tr>
        </tfoot>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.id %></td>
              <td><%= post.title %></td>
              <td><%= post.user.email %></td>
              <td><%= post.status%></td>
              <td>
                <%= link_to admin_post_path(post) do %>
                  <i class="fas fa-eye mr-2 fa-lg"></i>
                <%end%>
                <%= link_to edit_admin_post_path(post) do %>
                  <i class="far fa-edit ml-2 fa-lg"></i>
                <%end%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
