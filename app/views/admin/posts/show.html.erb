<div class="container-fluid mt-3 mb-5 light-background-raidators">
  <div class="container mt-5">
    <div class="card card-list content-full-size-div-raidator card-rounded-raidators">
      <div class="card-header card-header d-flex justify-content-between align-items-center dark-background-raidators text-white top-corner-radius-card-image-raidators">
        <h3 class="mb-0">Article "<%= @post.title %>" </h3>
      </div>
      <div class="card-body">
        <div class="row">
          <!--Grid column-->
          <div class="col-md-5 mb-4">
            <% if @post.avatar.attached? %>
            <%= image_tag @post.avatar, width: "70%", class:"card-img-top card-rounded-raidators"  %>
            <% end %>
          </div>
          <!--Grid column-->
          <div class="col-md-7 mb-4">
            <h3 class="mb-3"> <%= @post.title %></h3>
            <p>Contenu: <%= @post.content %></p>
            <p>Auteur: <%= @post.user.email%></p>
            <p>Mis à jour le <%= @post.updated_at.strftime("%d/%m/%Y %H/%M")%></p>
            <p>Statut : <%= @post.status %></p>
            <%= link_to "Modifier", edit_admin_post_path(@post), class:"btn btn-warning" %>
            <%= link_to "Supprimer", admin_post_path(@post), method: 'DELETE', class:"btn btn-danger", :data => {:confirm => 'Attention cette action est définitive'} %>
            <%= link_to "Retour à la liste des articles", admin_posts_path, class:"btn btn-info"%>
          </div>
          <!--Grid column-->
        </div>
      </div>
      <!--/.Panel 2-->
    </div>
    <!-- Pills panels -->

  </div>
</div>
