<% content_for :contact, "Contact | Raidators" %>

<div class="container-fluid mt-3 mb-5 light-background-raidators">
  <section class="contact">
      <!--Section: Content-->
        <!--Grid row-->
        <div class="col-lg-6 col-md-4 form-background-raidators text-center text-lg-left">
        
        <div class="container py-5 my-5">
          <div class="row">

            <!--Grid column-->
            <div class="col-lg-5 col-md-12 mb-0 mb-md-0">

              <h3 class="">Contact Us</h3>

              <p class="text-muted">Vous avez des questions ou simplement besoin de plus d'informations ? Contactez-nous via le formulaire. </p>

              <p><span class="mr-2">Email:</span><%= mail_to "Raidators@outlook.fr", "Nous contacter directement par mail" %></p>

            </div>
            <!--Grid column-->

            <!--Grid column-->
            <div class="col-lg-7 col-md-12 mb-4 mb-md-0">

              <!--Grid row-->
              <div class="row">

                <!--Grid column-->
                <div class="col-md-6">

                  <!-- Material outline input -->
                  <div class="md-form md-outline mb-0  ">
                    <input type="text" id="form-first-name" class="form-control form-control-raidators">
                    <label for="form-first-name">First name</label>
                  </div>

                </div>
                <!--Grid column-->

                <!--Grid column-->
                <div class="col-md-6">

                  <!-- Material outline input -->
                  <div class="md-form  mb-0 ">
                    <input type="text" id="form-last-name" class="form-control form-control-raidators">
                    <label for="form-last-name">Last name</label>
                  </div>

                </div>
                <!--Grid column-->

              </div>
              <!--Grid row-->

              <!-- Material outline input -->
              <div class="md-form  mt-3 ">
                <input type="email" id="form-email" class="form-control form-control-raidators">
                <label for="form-email">E-mail</label>
              </div>

              <!-- Material outline input -->
              <div class="md-form ">
                <input type="text" id="form-subject" class="form-control form-control-raidators">
                <label for="form-subject">Subject</label>
              </div>

              <!--Material textarea-->
              <div class="md-form mb-3">
                <textarea id="form-message" class="md-textarea form-control form-control-raidators" rows="3"></textarea>
                <label for="form-message">How we can help?</label>
              </div>

              <div class="actions text-center my-3">
                <%= submit_tag "Send Email", class:"btn btn-primary btn-dark-raidators" %>
              </div>

            </div>
            <!--Grid column-->

          </div>
          <!--Grid row-->
        </div>
      </section>
      <!--Section: Content-->
  </section>

  </div>